.text
    MOV [com_counter], 0

    TEST [resume_vect], [resume_vect]
    JZ run_once
    PUSH [resume_vect]
    MOV bp, [bp_cache]
    MOV sp, [sp_cache]
    MOV [resume_vect], 0
    RET
; Code by chartreuse
; Sleep bot until next tick and then return to where called
_Sleep:
    POP [resume_vect]
    MOV [bp_cache], bp
    MOV [sp_cache], sp
    BRK
;_Sleep end

run_once:
    TEST [ran_once], [ran_once]
    JNZ main
    CALL _RunOnce

    MOV A, 0
    HWI COM_PORT_HW

    CALL _ClearConsoleBuffer

    PUSH begin_text
    CALL _LoadConsoleBuffer

    MOV A, 0
    HWI HOLOGRAM_HW
    BRK

main:
    CALL _KeyboardRead

    CALL _HandleKeys
    BRK

_HandleKeys:
    AND [key], [key]
    JZ HandleKeys_done


    CMP [key], KEY_1
    JZ if_1
    CMP [key], KEY_2
    JZ if_2
    CMP [key], KEY_3
    JZ if_3
    CMP [key], KEY_4
    JZ if_4
    CMP [key], KEY_Q
    JZ if_q
    CMP [key], KEY_W
    JZ if_w
    CMP [key], KEY_E
    JZ if_e
    CMP [key], KEY_R
    JZ if_r

HandleKeys_next:
    CALL _NextKey
    JMP _HandleKeys

HandleKeys_done:
    RET

    if_1:
        TEST [pointer_one], [pointer_one]
        JNZ HandleKeys_next

        PUSH pointer_one
        PUSH POINTER_ONE_SIZE
        CALL _PrintMalloc

        JMP HandleKeys_next
    if_2:
        TEST [pointer_two], [pointer_two]
        JNZ HandleKeys_next

        PUSH pointer_two
        PUSH POINTER_TWO_SIZE
        CALL _PrintMalloc

        JMP HandleKeys_next
    if_3:
        TEST [pointer_three], [pointer_three]
        JNZ HandleKeys_next

        PUSH pointer_three
        PUSH POINTER_THREE_SIZE
        CALL _PrintMalloc

        JMP HandleKeys_next
    if_4:
        TEST [pointer_four], [pointer_four]
        JNZ HandleKeys_next

        PUSH pointer_four
        PUSH POINTER_FOUR_SIZE
        CALL _PrintMalloc

        JMP HandleKeys_next
    if_q:
        TEST [pointer_one], [pointer_one]
        JZ HandleKeys_next

        PUSH pointer_one
        CALL _PrintFree
        JMP HandleKeys_next
    if_w:
        TEST [pointer_two], [pointer_two]
        JZ HandleKeys_next

        PUSH pointer_two
        CALL _PrintFree
        JMP HandleKeys_next
    if_e:
        TEST [pointer_three], [pointer_three]
        JZ HandleKeys_next

        PUSH pointer_three
        CALL _PrintFree
        JMP HandleKeys_next
    if_r:
        TEST [pointer_four], [pointer_four]
        JZ HandleKeys_next

